{
  "name": "mu-community",
  "version": "1.0.0",
  "description": "A social network site for Metropolitan university",
  "main": "server.js",
  "author": "Arup rd",
  "license": "MIT",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node ./src/server/server.js",
    "server": "nodemon ./src/server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "client:start": "react-scripts start",
    "build": "react-scripts build --prefix client",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.5",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "express-history-api-fallback": "^2.2.1",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "moment": "^2.22.0",
    "mongoose": "^5.2.12",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-moment": "^0.7.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "shelljs": "^0.8.3",
    "validator": "^10.7.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.4"
  },
  "proxy": "http://localhost:5000"
}
